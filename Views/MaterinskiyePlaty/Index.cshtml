@model IEnumerable<PCConfigurator.Models.MaterinskayaPlata>

@{
    ViewData["Title"] = "Материнские платы";
}

<h1><i class="bi bi-motherboard"></i> Материнские платы</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Добавить новую материнскую плату
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-header-custom">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Model)</th>
                <th>@Html.DisplayNameFor(model => model.FormFaktor)</th>
                <th>@Html.DisplayNameFor(model => model.Soket)</th>
                <th>@Html.DisplayNameFor(model => model.MaksimalnyyObyomOzuGb)</th>
                <th>@Html.DisplayNameFor(model => model.Tsena)</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@Html.DisplayFor(modelItem => item.Model)</strong></td>
                    <td>@Html.DisplayFor(modelItem => item.FormFaktor)</td>
                    <td><span class="badge bg-info">@Html.DisplayFor(modelItem => item.Soket)</span></td>
                    <td>@Html.DisplayFor(modelItem => item.MaksimalnyyObyomOzuGb) ГБ</td>
                    <td><span class="badge bg-success">@Html.DisplayFor(modelItem => item.Tsena) ₽</span></td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Details" asp-route-id="@item.Model" class="btn btn-info">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Model" class="btn btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Model" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-3">
        <i class="bi bi-exclamation-triangle"></i> Нет доступных материнских плат. 
        <a asp-action="Create">Добавить первую материнскую плату</a>
    </div>
}