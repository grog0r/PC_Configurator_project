@model IEnumerable<PCConfigurator.Models.GotovayaSborka>

@{
    ViewData["Title"] = "Готовые сборки";
}

<h1><i class="bi bi-gear"></i> Готовые сборки</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Создать новую сборку
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-header-custom">
            <tr>
                <th>ID сборки</th>
                <th>Вычислительная мощность</th>
                <th>Общая стоимость</th>
                <th>Мощность</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@Html.DisplayFor(modelItem => item.IdSborki)</strong></td>
                    <td><span class="badge bg-info">@Html.DisplayFor(modelItem => item.VychislitelnayaMoshchnost)</span></td>
                    <td><span class="badge bg-success">@Html.DisplayFor(modelItem => item.ObshchayaStoimost) ₽</span></td>
                    <td><span class="badge bg-primary">@Html.DisplayFor(modelItem => item.MoshnostVt) Вт</span></td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Details" asp-route-id="@item.IdSborki" class="btn btn-info">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.IdSborki" class="btn btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdSborki" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-3">
        <i class="bi bi-exclamation-triangle"></i> Нет готовых сборок. 
        <a asp-action="Create">Создать первую сборку</a>
    </div>
}