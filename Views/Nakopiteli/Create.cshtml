@model PCConfigurator.Models.Nakopitel

@{
    ViewData["Title"] = "Добавить накопитель";
}

<h1>Добавить накопитель</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="card mb-4">
                <div class="card-header">
                    Основная информация
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Model" class="form-label"></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                            <div class="form-text">Например: Samsung 970 EVO Plus</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Tip" class="form-label"></label>
                            <select asp-for="Tip" class="form-select">
                                <option value="">Выберите тип</option>
                                <option value="SSD">SSD</option>
                                <option value="HDD">HDD</option>
                                <option value="NVMe">NVMe</option>
                                <option value="SATA">SATA</option>
                            </select>
                            <span asp-validation-for="Tip" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ObyomGb" class="form-label"></label>
                            <select asp-for="ObyomGb" class="form-select">
                                <option value="">Выберите объем</option>
                                <option value="256">256 ГБ</option>
                                <option value="512">512 ГБ</option>
                                <option value="1000">1 ТБ</option>
                                <option value="2000">2 ТБ</option>
                                <option value="4000">4 ТБ</option>
                                <option value="8000">8 ТБ</option>
                            </select>
                            <span asp-validation-for="ObyomGb" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    Производительность
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SkorostChteniyaMbS" class="form-label"></label>
                            <input asp-for="SkorostChteniyaMbS" class="form-control" />
                            <span asp-validation-for="SkorostChteniyaMbS" class="text-danger"></span>
                            <div class="form-text">Скорость чтения в МБ/с</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SkorostZapisiMbS" class="form-label"></label>
                            <input asp-for="SkorostZapisiMbS" class="form-control" />
                            <span asp-validation-for="SkorostZapisiMbS" class="text-danger"></span>
                            <div class="form-text">Скорость записи в МБ/с</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    Стоимость
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Tsena" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Tsena" class="form-control" />
                            <span class="input-group-text">₽</span>
                        </div>
                        <span asp-validation-for="Tsena" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Создать
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Назад к списку
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}