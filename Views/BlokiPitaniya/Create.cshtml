@model PCConfigurator.Models.BlokPitaniya

@{
    ViewData["Title"] = "Добавить блок питания";
}

<h1>Добавить блок питания</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="card mb-4">
                <div class="card-header">
                    Основная информация
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Model" class="form-label"></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                            <div class="form-text">Например: Corsair RM750x</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MoshchnostVt" class="form-label"></label>
                            <select asp-for="MoshchnostVt" class="form-select">
                                <option value="">Выберите мощность</option>
                                <option value="450">450 Вт</option>
                                <option value="550">550 Вт</option>
                                <option value="650">650 Вт</option>
                                <option value="750">750 Вт</option>
                                <option value="850">850 Вт</option>
                                <option value="1000">1000 Вт</option>
                                <option value="1200">1200 Вт</option>
                            </select>
                            <span asp-validation-for="MoshchnostVt" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Sertifikatsiya" class="form-label"></label>
                            <select asp-for="Sertifikatsiya" class="form-select">
                                <option value="">Выберите сертификацию</option>
                                <option value="80 Plus">80 Plus</option>
                                <option value="80 Plus Bronze">80 Plus Bronze</option>
                                <option value="80 Plus Silver">80 Plus Silver</option>
                                <option value="80 Plus Gold">80 Plus Gold</option>
                                <option value="80 Plus Platinum">80 Plus Platinum</option>
                                <option value="80 Plus Titanium">80 Plus Titanium</option>
                            </select>
                            <span asp-validation-for="Sertifikatsiya" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    Стоимость
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Tsena" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Tsena" class="form-control" />
                            <span class="input-group-text">₽</span>
                        </div>
                        <span asp-validation-for="Tsena" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Создать
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Назад к списку
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}