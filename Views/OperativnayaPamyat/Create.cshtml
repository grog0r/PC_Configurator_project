@model PCConfigurator.Models.OperativnayaPamyat

@{
    ViewData["Title"] = "Добавить оперативную память";
}

<h1>Добавить оперативную память</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="card mb-4">
                <div class="card-header">
                    Основная информация
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Model" class="form-label"></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                            <div class="form-text">Например: Kingston Fury Beast DDR4</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Tip" class="form-label"></label>
                            <select asp-for="Tip" class="form-select">
                                <option value="">Выберите тип</option>
                                <option value="DDR3">DDR3</option>
                                <option value="DDR4">DDR4</option>
                                <option value="DDR5">DDR5</option>
                            </select>
                            <span asp-validation-for="Tip" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ObyomModulyaGb" class="form-label"></label>
                            <select asp-for="ObyomModulyaGb" class="form-select">
                                <option value="">Выберите объем</option>
                                <option value="4">4 ГБ</option>
                                <option value="8">8 ГБ</option>
                                <option value="16">16 ГБ</option>
                                <option value="32">32 ГБ</option>
                                <option value="64">64 ГБ</option>
                            </select>
                            <span asp-validation-for="ObyomModulyaGb" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ChastotaMgts" class="form-label"></label>
                            <select asp-for="ChastotaMgts" class="form-select">
                                <option value="">Выберите частоту</option>
                                <option value="2133">2133 МГц</option>
                                <option value="2400">2400 МГц</option>
                                <option value="2666">2666 МГц</option>
                                <option value="3200">3200 МГц</option>
                                <option value="3600">3600 МГц</option>
                                <option value="4800">4800 МГц</option>
                            </select>
                            <span asp-validation-for="ChastotaMgts" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    Стоимость
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Tsena" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Tsena" class="form-control" />
                            <span class="input-group-text">₽</span>
                        </div>
                        <span asp-validation-for="Tsena" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Создать
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Назад к списку
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}